{
  "name": "puppeteer-mcp-cloudflare",
  "version": "1.0.0",
  "description": "Puppeteer MCP Server adapted for Cloudflare Workers using external browser services",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
